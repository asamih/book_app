<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
  </head>
  <header>
    <nav>
      <% if I18n.locale.to_s == "en" %>
        <%= link_to("日本語", :locale => "ja") %>
      <% else %>
        <%= link_to("English", :locale => "en") %>
      <% end %>
    </nav>
    <p>
      <% if user_signed_in? %>
        <%= t("devise.logged_in_html", email: current_user.email ) %>
        <%= link_to t("devise.profile"), user_path(id: current_user.id) %> |
        <%= link_to t("devise.logout"), destroy_user_session_path, method: :delete %>
      <% end %>
    </p>
  </header>
  <body>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
