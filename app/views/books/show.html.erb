<p>
  <strong><%= Book.human_attribute_name(:title) %>:</strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:memo) %>:</strong>
  <%= @book.memo %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:author) %>:</strong>
  <%= @book.author %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:picture) %>:</strong>
  <%= image_tag(@book.picture_url) if @book.picture.present? %>
</p>

<p>
  <strong><%= t("dictionary.contributor") %>:</strong>
  <%= link_to @book.user.name, user_path(id: @book.user_id) %>
</p>
<br>

<h2><%= t("comments.index.title") %></h2>
<%= render "comments/comments", commentable: @book %>
<br>

<h2><%= t("comments.new.title") %></h2>
<%= render "comments/form", commentable: @book, comment: @book.comments.new %>

<% if @book.user_id == current_user.id %>
  <%= link_to t("dictionary.edit"), edit_book_path(@book) %> |
<% end %>
<%= link_to t("dictionary.back"), books_path %>
